from time import sleep

class TrafficLight:
    __color = ['Red', 'Yellow', 'Green']

    def __init__(self, color=__color):
        self.color = color[0]

    def running(self):
        i = 0
        while i < 3:
            print(f'{TrafficLight.__color[i]}')
            if i == 0:
                sleep(5)
            elif i == 1:
                sleep(2)
            elif i == 2:
                sleep(1)
            i += 1

Traffic = TrafficLight()
Traffic.running()
